---
layout: default
pagination:
  data: collections
  size: 1
  alias: topic
  filter:
    - all
eleventyComputed:
  title: "{{ topic | title }} arguments"
permalink: /topics/{{ topic | slugify }}/
---
<h1>{{ topic | title }}</h1>

<ol>
{% set topiclist = collections[ topic ] %}
{% for post in topiclist | reverse %}
  <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
{% endfor %}
</ol>