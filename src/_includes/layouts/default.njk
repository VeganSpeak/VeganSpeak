		<link rel="mask-icon" href="{{ '/assets/favicons/safari-pinned-tab.svg" color="{{ site.theme }}' | url }}">
		<meta name="apple-mobile-web-app-title" content="{{ metaTitle }}">
		<meta name="application-name" content="{{ metaTitle }}">
		<meta name="msapplication-TileColor" content="{{ site.theme }}">
		<meta name="msapplication-config" content="{{ '/assets/favicons/browserconfig.xml' | url }}">

		<meta name="theme-color" content="{{ site.theme }}" media="(prefers-color-scheme: light)">
		<meta name="theme-color" content="{{ site.darkTheme }}" media="(prefers-color-scheme: dark)">
	</head>

