<div class="xl:max-w-2xl sm:prose-xl spacer max-w-xl mx-auto prose">
	{{ content | safe }}
</div>

{%- set previousPost = collections.arguments | getPreviousCollectionItem(page) %}
{%- set nextPost = collections.arguments | getNextCollectionItem(page) %}

<div class="lg:text-2xl border-primary-100 max-w-screen-md pt-2 mx-auto text-lg border-t border-dotted">
	<div class="grid {% if previousPost %}grid-cols-3{% else %}grid-cols-2{% endif %} gap-8 py-2">
		{%- if previousPost %}
			<p>
				<a class="block" href="{{ previousPost.url | url }}">
					<span class="font-medium">Previous</span>
					<span class="block text-base leading-snug">{{ previousPost.data.title }}</span>
				</a>
			</p>
		{% endif %}

		<p><a class="block{%- if previousPost %} text-center{% endif %}" href="/">All</a></p>

		{%- if nextPost %}
			<p class="text-right">
				<a class="block" href="{{ nextPost.url | url }}">
					<span class="font-medium">Next</span>
					<span class="block text-base leading-snug">{{ nextPost.data.title }}</span>
				</a>
			</p>
		{% endif %}
	</div>
</div>


<aside class="not-prose spacer text-center">
	<div class="bg-neutral-100 max-w-screen-md py-8 mx-auto">
		<h3 class="mb-4">Share this article to:</h3>
		<ul class="flex items-center justify-center divide-x">
			<li class="px-2">
				<a href="https://twitter.com/intent/tweet?url={{ site.url | url }}/{{ page.fileSlug }}/&text={{ title }}"
					title="Share on Twitter" target="_blank" rel="noopener noreferrer">
					<span>Twitter</span>
				</a>
			</li>

			<li class="px-2">
				<a href="https://www.facebook.com/sharer/sharer.php?u={{ post.url }}" title="Share on Facebook"
					target="_blank" rel="noopener noreferrer">
					<span>Facebook</span>
				</a>
			</li>

			<li class="px-2">
				<a href="https://reddit.com/submit?url={{ site.url | url }}/{{ page.fileSlug }}/&title={{ title }}"
					title="Share on Reddit" target="_blank" rel="noopener noreferrer">
					<span>Reddit</span>
				</a>
			</li>
		</ul>
	</div>
</aside>

